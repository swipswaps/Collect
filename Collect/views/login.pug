extends layout

block content
  form(class='uk-form-horizontal uk-margin-large', id='login_form', method='POST', action='/login' + redirect !== null ? '?redirect=' + encodeURIComponent(redirect) : '') 
    -if (error_message)
      div(class="uk-alert-danger", uk-alert, id="error_field")
        p(class="uk-text-center")=error_message
    // Username
    div(class="uk-margin")
      label(class="uk-form-label" for="form-horizontal-text")="Name"
      div(class="uk-form-controls")
        input(class="uk-input" autofocus id="username" type="text" name="username" placeholder="Username" value="")
    // Password
    div(class="uk-margin")
      label(class="uk-form-label" for="form-horizontal-text")="Password"
      div(class="uk-form-controls")
        input(class="uk-input" id="password" type="password" name="password" placeholder="Password" value="")  
    input(class="hidden", name="redirect", value=redirect)  
    // Submit button
    div(class="uk-margin")
        button(class="uk-button uk-button-primary uk-width-1", type="submit")
          | Login
  -if (public_access)
    div(class="uk-text-center uk-margin-small uk-text-muted")
        | You can also see a 
        a.uk-text-primary(href="/public/list") list of all sites
        |  without logging in.
